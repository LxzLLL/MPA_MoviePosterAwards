<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @System.Configuration.ConfigurationManager.AppSettings["WebsiteSubTitle"]</title>
    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <link href="~/Content/Common.css" rel="stylesheet" />
    <link href="~/Content/ms-navbar.css" rel="stylesheet" />
    <script src="~/Content/jquery.js"></script>
    <script src="~/Content/ms-navbar.js"></script>
</head>
<body>
    <nav class="ms-navbar ms-navbar-default">
        <div class="ms-container ms-navbar-bg">
            <a class="ms-navbar-brand" href="/Home/Index">@System.Configuration.ConfigurationManager.AppSettings["WebsiteTitle"]</a>
            <ul class="ms-nav ms-navbar-nav">
                <li class="nav-home">@Html.ActionLink("首页", "Index", "Home")</li>
                <li class="nav-movie">@Html.ActionLink("电影", "List", "Movie")</li>
                <li class="nav-celeb">@Html.ActionLink("影人", "List", "Celeb")</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </nav>

    @RenderBody()

    <style>
        .ms-footer-sub {
            background-color: #252525;
            height: 20px;
            line-height: 20px;
            text-align: center;
        }

        .ms-footer {
            background-color: #FF3300;
            color: #FDFDFD;
            text-align: center;
            overflow: hidden;
        }

        footer {
            clear: both;
        }
    </style>
    <footer>
        <div class="ms-footer-sub">

        </div>
        <div class="ms-footer">
            <p style="margin:30px 0;">&copy; @DateTime.Now.Year - @System.Configuration.ConfigurationManager.AppSettings["WebsiteTitle"] - @System.Configuration.ConfigurationManager.AppSettings["WebsiteSubTitle"]</p>
        </div>
    </footer>
</body>
</html>
