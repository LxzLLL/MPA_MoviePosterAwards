@model List<MPA_MoviePosterAwards.Web.Models.MovieViewModel>

@{
    ViewBag.Title = "所有电影";
}

<div class="ms-container">
    <h2>所有电影</h2>
    @Html.ActionLink("新建电影", "Create", "Movie")
    <table class="table table-striped">
        <tr>
            <td>序号</td>
            <td>电影名</td>
            <td>年份</td>
            <td>类型</td>
            <td>制片国家/地区</td>
            @*<td>语言</td>*@
            <td>上映日期</td>
            <td>时长</td>
            <td>豆瓣编号</td>
            <td>操作</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Model.IndexOf(item)</td>
                <td>
                    <a href="/Movie/Index?id=@item.Id">@item.Title</a>
                </td>
                <td>@item.Year</td>
                <td>@item.Genre</td>
                <td>@item.Country</td>
                @*<td>@item.Language</td>*@
                <td>@item.Pubdates</td>
                <td>@item.Durations</td>
                <td>
                    <a href="https://movie.douban.com/subject/@item.Douban">@item.Douban</a>
                </td>
                <td>
                    <a href="/Poster/Create?movie=@item.Id"><i class="fa fa-plus-circle"></i></a>
                    <a href="/Movie/Delete?id=@item.Id&returnurl=@Request.Url.ToString()"><i class="fa fa-trash-o"></i></a>
                    <a href="/Movie/Update?id=@item.Id&returnurl=@Request.Url.ToString()"><i class="fa fa-refresh"></i></a>
                </td>
            </tr>
        }
    </table>
</div>

<script>
    $(document).ready(function () {
        $('.nav-movie').addClass('active');
    });
</script>